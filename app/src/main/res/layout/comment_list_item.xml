<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_comment_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/biz_pc_main_info_profile_avatar_bg_dark"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_comment_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_comment_icon"
            android:text="290389080"
            android:textColor="#00ffff"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/tv_coomment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-12-06 12:12:12"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="风决定要走"
        android:textSize="16sp"/>

</LinearLayout>